<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        function confirmDelete(event) {
            if (!confirm("Are you sure you want to delete this post?")) {
                event.preventDefault(); // Prevent the form submission
            }
        }
    </script>
</head>
<body>
    <h1><%= post.title %></h1>
    <p><%= post.body %></p>

    <h2>Comments</h2>
    <ul>
        <% post.comments.forEach(comment => { %>
            <li><%= comment.body %></li>
        <% }); %>
    </ul>

    <form action="/post/<%= post.id %>/comment" method="POST">
        <textarea name="body" placeholder="Add a comment" required></textarea>
        <button type="submit" class="button">Submit Comment</button>
    </form>

    <a href="/post/<%= post.id %>/edit" class="button">Edit Post</a>
    <form action="/post/<%= post.id %>/delete" method="POST" style="display:inline;" onsubmit="confirmDelete(event);">
        <button type="submit" class="button delete-button">Delete Post</button>
    </form>

    <a href="/">Back to posts</a>
</body>
</html>
